<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x7"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x65"
        android:layout_marginRight="@dimen/x65"
        android:gravity="center"
        android:orientation="vertical">

        <com.life.mm.framework.ui.widget.RoundCornerListView
            android:id="@+id/bottom_pop_select_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_item_corner_background"
            android:divider="@color/color_dddddd"
            android:cacheColorHint="#00000000"
            android:dividerHeight="@dimen/x1" />
    </LinearLayout>

    <Button
        android:id="@+id/bottom_pop_select_cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x29"
        android:layout_marginLeft="@dimen/x65"
        android:layout_marginRight="@dimen/x65"
        android:layout_marginTop="@dimen/x29"
        android:background="@drawable/xml_round_corner_white_bg_customer"
        android:padding="@dimen/x29"
        android:text="@string/common_cancel"
        android:textColor="@drawable/text_color_333333_selector"
        android:textSize="@dimen/x43" />

</LinearLayout>