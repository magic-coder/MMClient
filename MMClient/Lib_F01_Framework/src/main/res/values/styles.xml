<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--日间主题-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--这是App深色调的基本颜色，主要用于通知栏背景-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--这是App的主要颜色，用于工具栏背景-->
        <item name="colorPrimary">@color/primary</item>
        <!--这是文本的主要颜色，用于工具栏标题-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!--这是次文本的主要颜色，用于工具栏次标题-->
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <!--分割线颜色-->
        <item name="android:divider">@color/divider</item>
        <!--强调色-->
        <item name="colorAccent">@color/accent</item>
        <!--toolbar searchview hint 颜色-->
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="colorControlHighlight">@android:color/transparent</item> 
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:itemBackground">@color/item_color</item>

        <!--下面是自定义的属性-->
        <item name="backgroundColor">@color/background_color</item>
        <item name="fabColor">@color/fab_color</item>
        <item name="pacIconColor">@color/icons</item>
        <item name="navColor">@drawable/selector_nav</item>
        <item name="checkTextViewColorStateList">@drawable/selector_nav</item>
        <item name="toolbarTheme">@style/ToolbarTheme</item>
        <item name="itemChannelBackground">@drawable/selector_news_channel</item>
        <item name="navHeaderBackground">@drawable/ic_navigation_header_bg</item>
        <item name="pointColor">@color/primary</item>

    </style>

    <style name="BaseAppTheme.AppTheme">
        <!-- <item name="android:windowAnimationStyle">@style/noAnimation</item>-->
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- ToolBar主题，menu的item字体为白色 -->
    <style name="ToolBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:textColorSecondary">@color/material_white</item>
        <item name="actionMenuTextColor">@color/material_white</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="actionMenuTextColor">@color/material_white</item>
        <item name="android:textColorPrimary">@color/material_white</item>
        <item name="android:textColorSecondary">@color/material_white</item>
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>
    </style>


    <!--菜单收起来时的三个小点的样式-->
    <style name="ActionButton.Overflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_over_flow</item>
    </style>

    <style name="base_view_style">
        <item name="android:background">?android:attr/selectableItemBackground</item><!-- 水波纹效果 -->
    </style>
    <style name="base_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="normal_text_style" parent="@style/base_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:padding">@dimen/text_padding_normal_size</item>
    </style>
    <style name="sep_view_item" parent="@style/base_view_style">
        <item name="android:background">@color/list_divider_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fill_item_small_height</item>
        <item name="android:layout_marginLeft">@dimen/margin_item_normal_height</item>
        <item name="android:layout_marginRight">@dimen/margin_item_normal_height</item>
    </style>

    <style name="left_menu_text_style" parent="@style/normal_text_style">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">@dimen/margin_item_normal_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="card_view_style" parent="@style/base_layout_style">
        <item name="android:layout_marginLeft">@dimen/margin_item_normal_height</item>
        <item name="android:layout_marginRight">@dimen/margin_item_normal_height</item>
    </style>
    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_down</item>
    </style>
    <style name="transparentFrameWindowStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/choose_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>