<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_nav_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y160</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/y15</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/main_nav_button_text_color</item>
        <item name="android:textSize">@dimen/x33</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/main_nav_button_bg</item>
    </style>

</resources>
